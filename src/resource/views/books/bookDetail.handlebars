<section class='bg-sand padding-large'>
    <div class='container'>
        <div class='row'>
            <form method='POST' action='/cart/{{book._id}}?_method=PUT'>
                <div class='col-md-6'>
                    <a href='#' class='product-image'><img
                            src='{{book.img1}}'
                        /></a>
                </div>

                <div class='col-md-6 pl-5'>
                    <div class='product-detail'>
                        <h1>{{book.title}}</h1>
                        <p>{{book.category}}</p>
                        <span class='price colored'>$ {{book.price}}</span>

                        <p>
                            {{book.description}}
                        </p>

                        <button
                            type='submit'
                            name='add-to-cart'
                            value='27545'
                            class='button'
                        >Add to cart</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</section>