                                            <img
                                                src='{{this.img1}}'
                                                alt='Books'
                                                class='product-item'
                                            /></a>
                                        <button
                                            type='button'
                                            class='add-to-cart'
                                            data-product-tile='add-to-cart'
                                        >Add to Cart</button>
                                        <figcaption>
                                            <a href='books/{{this.slug}}'><h3
                                                >{{this.title}}</h3>
                                            </a>
                                            <p>{{this.author}}</p>
                                            <div class='item-price'>$
                                                {{this.price}}</div>
                                        </figcaption>
                                    </figure>
                                </div>
                            {{/each}}
