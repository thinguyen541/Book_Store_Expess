<section class='h-100 gradient-form' style='background-color: #eee;'>
    <div class='container py-5 h-100'>
        <div class='row d-flex justify-content-center align-items-center h-100'>
            <div class='col-xl-10'>
                <div class='card rounded-3 text-black'>
                    <div class='row g-0'>
                        <div class='col-lg-6'>
                            <div class='card-body p-md-5 mx-md-4'>

                                <div class='text-center'>
                                    <img
                                        src='https://demo.templatesjungle.com/booksaw/images/main-logo.png'
                                        style='width: 185px;'
                                        alt='logo'
                                    />
                                    <h4 class='mt-1 mb-5 pb-1'>“So many books,
                                        so little time.”</h4>
                                </div>

                                <form method='POST' action='/auth/api/login'>
                                    <p>Please login to your account</p>

                                    <div class='form-outline mb-4'>
                                        <input
                                            type='email'
                                            name='email'
                                            class='form-control'
                                            placeholder='Email address'
                                        />
                                        <label class='form-label'>Email</label>
                                    </div>

                                    <div class='form-outline mb-4'>
                                        <input
                                            type='password'
                                            id='login_password'
                                            name='password'
                                            minlength='6'
                                            class='form-control'
                                        />
                                        <label
                                            class='form-label'
                                        >Password</label>
                                        <span
                                            id='invalid-acount'
                                            hidden='true'
                                        >Please check your login details.
                                            Invalid email/password.</span>
                                    </div>

                                    <div class='text-center pt-1 mb-5 pb-1'>
                                        <button
                                            class='btn btn-primary fa-lg gradient-custom-2 mb-3'
                                            type='submit'
                                        >Log in</button>
                                        <a class='text-muted' href='#!'>Forgot
                                            password?</a>
                                    </div>

                                    <div
                                        class='d-flex align-items-center justify-content-center pb-4'
                                    >
                                        <p class='mb-0 me-2'>Don't have an
                                            account?</p>
                                        <a href='/auth/register'><button
                                                type='button'
                                                id='creat_button'
                                                class='btn btn-outline-danger'
                                            >Create new</button></a>
                                    </div>

                                </form>

                            </div>
                        </div>
                        <div
                            class='col-lg-6 d-flex align-items-center gradient-custom-2'
                        >
                            <div class='text-white px-3 py-4 p-md-5 mx-md-4'>
                                <h4 class='mb-4'>“The person, be it gentleman or
                                    lady, who has not pleasure in a good novel,
                                    must be intolerably stupid.” .</h4>
                                <p class='small mb-0'></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const invalid_infor = document.getElementById('invalid-acount') const
    invalid =
    {{invalid}}
    if (invalid){ invalid_infor.hidden = false }
</script>